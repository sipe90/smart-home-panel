{
  "name": "tradfri-control-panel",
  "version": "0.6.0",
  "private": true,
  "workspaces": {
    "packages": [
      "client",
      "server",
      "mock",
      "shared"
    ],
    "nohoist": [
      "**/module-alias"
    ]
  },
  "scripts": {
    "build": "yarn run build:client && yarn run build:server",
    "build:client": "yarn --cwd client build",
    "build:server": "yarn --cwd server build",
    "test": "yarn run test:client && yarn run test:server",
    "test:client": "yarn --cwd client test",
    "test:server": "yarn --cwd server test",
    "start": "yarn --cwd server start",
    "dev": "concurrently 'yarn --cwd server run dev' 'yarn --cwd client run dev'",
    "dev:mock": "concurrently 'yarn --cwd mock run dev' 'yarn --cwd client run dev'",
    "tradfri-auth": "ts-node bin/tradfri.ts authenticate",
    "tradfri-discover": "ts-node bin/tradfri.ts discover"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "typescript": "4.0.5",
    "node-tradfri-client": "^2.1.6",
    "ts-node": "^9.0.0",
    "jest": "^26.5.3",
    "ts-jest": "^26.4.1"
  }
}