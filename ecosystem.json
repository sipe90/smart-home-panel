{
  "apps": [{
    "name": "tradfri-control-panel",
    "script": "./src/server/app.js",
    "watch": false,
    "env": {
      "NODE_ENV": "production",
      "PORT": 8080
    }
  }],
  "deploy": {
    "production": {
      "host": "localhost",
      "repo": "https://github.com/sipe90/tradfri-control-panel.git",
      "ref": "origin/master",
      "path": "/var/tradfri-control-panel",
      "post-deploy": "npm i && npm run build && pm2 startOrRestart ecosystem.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
